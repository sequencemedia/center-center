{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "esnext",
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "strictNullChecks": true,
    "paths": {
      "#center-center": [
        "./src/index.mjs"
      ],
      "#center-center/common": [
        "./src/common/index.mjs"
      ],
      "#center-center/dom": [
        "./src/dom/index.mjs"
      ],
      "#center-center/svg": [
        "./src/svg/index.mjs"
      ]
    }
  },
  "include": [
    "./*.mjs",
    "./*.mts",
    "./src/*.mjs",
    "./src/*.mts",
    "./src/**/*.mjs",
    "./src/**/*.mts"
  ]
}
